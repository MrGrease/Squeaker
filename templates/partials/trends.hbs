<div class="list-group mt-1">
    <li class="list-group-item">
        <h4>Trends for you</h4>
    </li>
    {{#if trends}}
    {{#each trends}}
    <a href="#" class="list-group-item list-group-item-action">
        <div>
            <small class="text-secondary">Trending in ...</small>
            <h5 class="font-weight-bold">Trend 1</h4>
                <p class="text-secondary">x Squeaks</p>
        </div>
    </a>
    {{/each}}
    <a href="#" class="list-group-item list-group-item-action">
        Show More
    </a>
    {{else}}
    <div class="list-group-item list-group-item-action">
        <ul class="list-unstyled">
            <li class="handle">
                <p>Nothing is Trending</p>
            </li>
        </ul>
    </div>
    {{/if}}

</div>
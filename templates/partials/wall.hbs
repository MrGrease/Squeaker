{{#each user.squeaks}}
<div class="border-bottom">
    <div class="form-group">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-10">
                <small class="text-secondary"></small>
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <img class="img-fluid rounded-circle profilemini ml-3 mt-1"
                    src="data:image/png;base64, {{../user.avatar}}" alt="">
            </div>
            <div class="col-10">
                <h6 class="d-inline">{{../user.name}}</h6>
                <p class="d-inline text-secondary">@{{../user.handle}}</p>
                <p class="d-inline text-secondary">{{this.createdAt}}</p>
                <p class="content">{{this.content}}</p>
                {{#if this.attachment}}
                <div class="mr-3">
                    <img class=" headerimage" src="data:image/png;base64, {{this.attachment}}" alt="">
                </div>
                {{/if}}
            </div>
        </div>
        <div class="row">
            <div class="d-flex justify-content-around container mt-3">
                <div class="col-1 mx-1">
                    <form action="/home" method="GET">
                        <div class="form-group">
                            <label for="comment">
                                <img src="/icons/comment.svg" class="squeakbar pointer" />
                            </label>
                            <input type="submit" class="squeakbar d-none" id="{{this._id}}comment" name="comment">
                        </div>
                    </form>
                </div>
                <div class="col-1 mx-1">
                    <form action="/user/{{../user._id}}/status/{{this._id}}/resqueak" method="POST">
                        <div class="form-group">
                            <label for="resqueak">
                                <img src="/icons/resqueak.svg" class="squeakbar pointer" />
                            </label>
                            <input type="submit" class="squeakbar d-none" id="{{this._id}}resqueak" name="resqueak">
                        </div>
                    </form>
                </div>
                <div class="col-1 mx-1">
                    <form action="/user/{{../user._id}}/status/{{this._id}}/like" method="POST">
                        <div class="form-group">
                            <label for="like">
                                <img src="/icons/heart.svg" class="squeakbar pointer" />
                            </label>
                            <input type="submit" class="squeakbar d-none" id="{{this._id}}like" name="like">
                        </div>
                    </form>
                </div>
                <div class="col-1 mx-1">
                    <div class="">
                        <a href="/user/{{../user._id}}/status/{{this._id}}" onclick="copyURI(event)" name="share"><img
                                src="/icons/share.svg" class="squeakbar pointer" /></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}